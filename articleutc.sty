\RequirePackage{edeparisarticle}

\RequirePackage{framed}
\newenvironment{codebox}{%
  \def\FrameCommand{%
    \fboxsep=\FrameSep \fcolorbox{fboxcodecolor}{boxcodecolor}%
  }%
  \MakeFramed{\FrameRestore}%
}%
{\endMakeFramed}

\newenvironment{defbox}{%
  \def\FrameCommand{%
    \fboxsep=\FrameSep \fcolorbox{fboxdefcolor}{boxdefcolor}%
  }%
  \MakeFramed{\FrameRestore}%
  \noindent\ignorespaces
}%
{\endMakeFramed}

\newenvironment{atosbox}{%
  \def\FrameCommand{%
    \fboxsep=\FrameSep \fcolorbox{atosred}{fboxatoscolor}%
  }%
  \MakeFramed{\FrameRestore}%
}%
{\endMakeFramed}

