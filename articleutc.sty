% Création de la page de titre

\newcommand{\titrearticle}{
  \begin{center}
    \vfill
    \Huge \@title \\
    \vspace{1cm}
    \large \textit{\@author}\\
    \large{\@date}\\
    \normalsize{\@uv~---~\@semestre}
    \vspace{1cm}
  \end{center}
}

